rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===============================
    // USERS
    // ===============================
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ===============================
    // USER WATCHLISTS
    // ===============================
    match /user_watchlists/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /user_watchlists/{userId}/items/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ===============================
    // USER ALERTS
    // ===============================
    match /users/{userId}/alerts/{alertId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ===============================
    // USER PRIVATE SHOES
    // ===============================
    match /users/{userId}/shoes/{shoeId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ===============================
    // PUBLIC DATA
    // ===============================
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    match /releases/{releaseId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
      
      // Stock snapshots subcollection
      match /stock_snapshots/{snapshotId} {
        allow read: if true;
        allow write: if request.auth.token.admin == true;
      }
    }

    match /retailers/{retailerId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    match /regions/{regionId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // RELEASE STATS (server-only writes, public reads)
    // ===============================
    match /releaseStats/{releaseId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // STATS (aggregated daily stats)
    // ===============================
    match /stats/{document=**} {
      allow read: if request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // INVENTORY SNAPSHOTS (server-only)
    // ===============================
    match /inventory_snapshots/{snapshotId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // ALERTS (user can only read their own)
    // ===============================
    match /alerts/{alertId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // CHANGELOG / LOGS (admin-only)
    // ===============================
    match /changelog/{entryId} {
      allow read: if request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }

    match /logs/{logId} {
      allow read: if request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // QUEUES (server-only)
    // ===============================
    match /queues/{jobId} {
      allow read: if request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }

    match /queue_results/{resultId} {
      allow read: if request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // METRICS (server-only)
    // ===============================
    match /metrics/{metricId} {
      allow read: if request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // COMMUNITY CHAT (authenticated users)
    // ===============================
    match /artifacts/{appId}/public/data/community_chat/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // ===============================
    // HYPE RELEASES (public read, server write)
    // ===============================
    match /sneakers_hype/{hypeId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // ===============================
    // LEGACY SNEAKERS COLLECTION (backward compatibility)
    // ===============================
    match /sneakers/{sneakerId} {
      allow read: if request.auth != null;
      allow update: if request.auth != null && request.auth.token.admin == true;
      allow create: if false;
      allow delete: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
