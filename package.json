{
  "name": "live-shoe-tracker-root",
  "private": true,
  "version": "1.0.0",
  "description": "Live Shoe Tracker - Unified monorepo for sneaker release tracking",
  "scripts": {
    "install": "cd sneaker-tracker && pnpm install",
    "dev:api": "cd sneaker-tracker/apps/api-server && npm run dev",
    "dev:web": "cd sneaker-tracker/apps/web-nextjs && npm run dev",
    "dev:all": "docker-compose -f sneaker-tracker/infra/docker-compose.yml up --build",
    "build:api": "cd sneaker-tracker/apps/api-server && npm run build",
    "build:web": "cd sneaker-tracker/apps/web-nextjs && npm run build",
    "scrapers:monitor": "pnpm -C sneaker-tracker/packages/scrapers/playwright_monitor run monitor",
    "migrate": "cd sneaker-tracker/packages/supabase-migrations && pnpm run migrate"
  },
  "engines": {
    "node": ">=18 <26",
    "pnpm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/itsjoshwalls/Live-Shoe-Tracker"
  }
}
