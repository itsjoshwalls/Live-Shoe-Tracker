# Supabase (optional, if using)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Firebase Environment Selection
# Set to 'production' (default) or 'staging'
NEXT_PUBLIC_FIREBASE_ENV=production

# Firebase Production Configuration
# Get this from Firebase Console → Project Settings → General → Your apps → Web app
NEXT_PUBLIC_FIREBASE_CONFIG={"projectId":"your-prod-project-id","appId":"1:123456789:web:abcdef","storageBucket":"your-prod-project.firebasestorage.app","apiKey":"AIzaXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX","authDomain":"your-prod-project.firebaseapp.com","messagingSenderId":"123456789","measurementId":"G-XXXXXXXXXX"}

# Firebase Staging Configuration (optional)
# Create a second Firebase project for staging/testing
# Get config from staging project in Firebase Console
NEXT_PUBLIC_FIREBASE_STAGING_CONFIG={"projectId":"your-staging-project-id","appId":"1:987654321:web:xyz123","storageBucket":"your-staging-project.firebasestorage.app","apiKey":"AIzaYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYY","authDomain":"your-staging-project.firebaseapp.com","messagingSenderId":"987654321"}

# Server-side Firebase Admin SDK (for API routes, server components)
# Download service account JSON from Firebase Console → Project Settings → Service Accounts
# Paste the entire JSON as a single-line string
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"xxx","private_key":"-----BEGIN PRIVATE KEY-----\nXXX\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk@your-project.iam.gserviceaccount.com","client_id":"123456789","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40your-project.iam.gserviceaccount.com"}

# Staging service account (if using separate staging project)
FIREBASE_STAGING_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-staging-project-id",...}
