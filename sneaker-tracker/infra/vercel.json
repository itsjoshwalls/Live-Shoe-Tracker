{
  "version": 2,
  "name": "sneaker-tracker-monorepo",
  "builds": [
    {
      "src": "apps/web-nextjs/package.json",
      "use": "@vercel/next",
      "config": {
        "rootDirectory": "apps/web-nextjs"
      }
    },
    {
      "src": "apps/api-server/package.json",
      "use": "@vercel/node",
      "config": {
        "rootDirectory": "apps/api-server"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api-server/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web-nextjs/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@supabase-url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase-anon-key",
    "SUPABASE_SERVICE_ROLE_KEY": "@supabase-service-key"
  },
  "regions": ["iad1"]
}