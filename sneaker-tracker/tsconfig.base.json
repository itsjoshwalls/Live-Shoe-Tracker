{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["apps/**/*", "packages/**/*", "infra/**/*", "scripts/**/*", "tests/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}