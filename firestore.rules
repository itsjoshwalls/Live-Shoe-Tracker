rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ======== USERS ======== */
    match /users/{uid} {
      allow read: if request.auth != null; // authenticated users can read public user info
      allow write: if request.auth != null && request.auth.uid == uid; // self-edit only

      match /alerts/{alertId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    /* ======== RELEASES ======== */
    match /releases/{releaseId} {
      allow read: if true; // public releases
      allow write: if request.auth.token.admin == true; // admin only
      match /stock_snapshots/{snapshotId} {
        allow read: if true;
        allow write: if request.auth.token.admin == true;
      }
    }

    /* ======== RETAILERS ======== */
    match /retailers/{retailerId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    /* ======== QUEUES ======== */
    match /queues/{jobId} {
      allow read: if request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }

    /* ======== METRICS ======== */
    match /metrics/{metricId} {
      allow read: if request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;
    }

    /* ======== REGIONS / CATEGORIES ======== */
    match /regions/{regionId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    match /categories/{catId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

  }
}
